<% provide(:title, 'Create publisher') %>
<h1>Create publisher</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@publisher) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :url %>
			<%= f.text_field :url %>

			<%= f.label :state %>	
			<%= f.select :state_id, options_for_select(MState.all.collect { |state| state.name })  %>	

			<%= f.submit "Create publisher", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
